<h2>edit movie: {{movie.title}}</h2>
<p>MovID:&nbsp;{{movie._id}}</p>
<form action="/movies/{{movie._id}}/edit" method="POST">
  <label>Title:
    <input type="text" name="title" value="{{movie.title}}" />
  </label>
  <label>Movie plot:
    <textarea name="plot" cols="30" rows="5">{{movie.plot}}</textarea>
  </label>
  <label>Genre:
    <input type="text" name="genre" value="{{movie.genre}}" />
  </label>
  <label>Actors casted:
    <select name="cast" id="cast" multiple>
      {{#each celebrities}}
        {{#each ../movie.cast}} 
          
            <option {{#eq ../id id}} selected {{/eq}} value="{{../_id}}">{{../name}}</option> 
          {{!else}}
            <!--<option value="{{../_id}}">{{../name}}</option>-->
          
        {{/each}}
      {{/each}}
    </select>
  </label>
  <button type="submit">Update Movie</button>
</form>